
---
interface Props {
  title: string;
  price: string;
  description: string;
  features: string[];
  buttonText: string;
}

const { title, price, description, features, buttonText } = Astro.props;
---

<div class="flex flex-col p-6 bg-white rounded-lg border border-gray-100 shadow dark:border-gray-600 dark:bg-gray-800 dark:text-white text-center">
  <h3 class="mb-4 text-2xl font-semibold">{title}</h3>
  <p class="font-light text-gray-500 sm:text-lg dark:text-gray-400">{description}</p>
  <div class="flex justify-center items-baseline my-8">
    <span class="mr-2 text-5xl font-extrabold">{price}</span>
    <span class="text-gray-500 dark:text-gray-400">/mes</span>
  </div>
  <ul role="list" class="mb-8 space-y-4 text-left">
    {features.map((feature) => (
      <li class="flex items-center space-x-3">
        <svg class="w-5 h-5 text-green-500 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 01.0 1.414l-8 8a1 1 0 01-1.414.0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414.0z" clip-rule="evenodd" />
        </svg>
        <span>{feature}</span>
      </li>
    ))}
  </ul>
  <a href="#" class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:focus:ring-blue-900">{buttonText}</a>
</div>
