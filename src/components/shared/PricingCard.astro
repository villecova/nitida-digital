
---
import Button from './Button.astro';

interface Props {
  title: string;
  subtitle: string;
  description: string;
  features: string[];
  buttonText: string;
}

const { title, subtitle, description, features, } = Astro.props;
---

<div class="flex flex-col bg-white rounded-2xl shadow-xl border border-gray-100  dark:border-gray-600 dark:bg-gray-800 dark:text-white ">
  <div class="p-6 flex-auto">
    <h3 class="mb-4 text-3xl font-main text-secondary">{title}</h3>
    <p class="font-light text-gray-500 dark:text-gray-400 text-sm">{subtitle}</p>

    <p class="text-accent my-4 text-xs">{description}</p>
    <p class="my-4">Incluye:</p>
    <ul role="list" class="mb-8 space-y-4 text-left">
      {features.map((feature) => (
        <li class="flex items-center space-x-3 ">
          <svg class="w-5 h-5 text-green-500 dark:text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 01.0 1.414l-8 8a1 1 0 01-1.414.0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414.0z" clip-rule="evenodd" />
          </svg>
          <span class="text-xs">{feature}</span>
        </li>
      ))}
    </ul>
  </div>
  
  <div class="flex-none p-5 flex flex-row justify-center border-t border-gray-200">
    <Button  fullWidth={true} href="/contact" label="Cotizar plan" variant="primary" />
  </div>
</div>

