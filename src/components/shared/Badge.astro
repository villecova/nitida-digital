---
const { label = "Etiqueta", color = "yellow" } = Astro.props;

// Clases basadas en el sistema de colores de Flowbite
const classMap = {
  yellow: "bg-secondary text-primary rounded-xl dark:bg-yellow-900 dark:text-yellow-300",
  green: "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
  red: "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
  blue: "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
  purple: "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300",
};

const classes = classMap[color] ?? classMap.yellow;
---

<span class={`${classes} text-xs font-medium px-2.5 py-0.5 rounded-sm`}>
  {label}
</span>
