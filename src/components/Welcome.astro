---

import Button from "./shared/Button.astro";

const {
  type = 'image', // 'image', 'video' o 'color'
  mediaSrc = '/assets/images/nitida_crea.svg',
  overlayColor = 'bg-black/50',
  title = 'We invest in the worldâ€™s potential',
  subtitle = 'Here at Flowbite we focus on markets where technology, innovation, and capital can unlock long-term value and drive economic growth.',
  primaryButton = 'Get started',
  secondaryButton = 'Learn more',
  primaryLink = '#',
  secondaryLink = '#',
  color = 'bg-primary',
} = Astro.props;

---

<section class={`relative bg-[--background] dark:bg-gray-900 h-dvh `}>
  {type === 'video' && (
    <div class="absolute inset-0 z-0">
      <video autoplay muted loop playsinline class="w-full h-full object-cover">
        <source src={mediaSrc} type="video/mp4" />
      </video>
      <div class={`absolute inset-0 ${overlayColor}`}></div>
    </div>
  )}

  {type === 'image' && (
    <div class="relative z-10">
      <img src={mediaSrc} alt="Hero Image" class="w-1/2 mx-auto mb-4" />
    </div>
  )}

  {type === 'color' && (
    <div class={`relative z-10 ${color}`}>
    </div>
  )}

  <div class={`relative  mx-auto max-w-screen-lg text-center h-full flex flex-col justify-center`}>
    <div class="relative ">
      <img src={mediaSrc} alt="Hero Image" class="w-1/2 md:w-1/3 mx-auto mb-4" />
    </div>
    <h1 class="mb-4 font-main w-750 mx-auto leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">{title}</h1>
    <p class="mb-8 text-lg font-normal text-accent lg:text-xl sm:px-16 lg:px-48 dark:text-gray-400">{subtitle}</p>


    <div class="flex flex-col space-y-4 gap-4 sm:flex-row sm:justify-center sm:space-y-0">
      <Button href="/contact" label="Agendar una llamada " variant="primary" />
      <Button href="/contact" label="Explorar proyectos" variant="secondary" />
    </div>
  </div>
</section>
