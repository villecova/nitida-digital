---
import Badge from './shared/Badge.astro';
import PricingCard from './shared/PricingCard.astro';

const plans = [
  {
    title: 'Básico',
    price: '$9',
    description: 'Ideal para proyectos personales.',
    features: ['1 proyecto', 'Soporte básico'],
    buttonText: 'Comenzar',
  },
  {
    title: 'Profesional',
    price: '$29',
    description: 'Para pequeñas empresas.',
    features: ['5 proyectos', 'Soporte prioritario'],
    buttonText: 'Comenzar',
  },
  {
    title: 'Empresarial',
    price: '$99',
    description: 'Para empresas en crecimiento.',
    features: ['Proyectos ilimitados', 'Soporte 24/7'],
    buttonText: 'Comenzar',
  },
  {
    title: 'Personalizado',
    price: 'A consultar',
    description: 'Soluciones a medida.',
    features: ['Consultoría dedicada', 'Soporte premium'],
    buttonText: 'Contactar',
  },
];
---

<section class="bg-[--background-100] dark:bg-gray-900 py-12">
  <div class="max-w-screen-lg mx-auto px-4">
    <div class="text-center mb-12">
      <Badge label="Planes" color="yellow" />
      <h2 class="text-5xl font-main text-gray-900 dark:text-white my-2">
        Nuestros planes de servicios
      </h2>
      <p class="text-accent dark:text-gray-400 text-lg">
        Explora las opciones y elige el paquete que mejor se adapta a tu proyecto.
      </p>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {plans.map((plan) => (
        <PricingCard
          title={plan.title}
          price={plan.price}
          description={plan.description}
          features={plan.features}
          buttonText={plan.buttonText}
        />
      ))}
    </div>
  </div>
</section>
