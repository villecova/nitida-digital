---
import '../styles/global.css';
const pageTitle = "Diseño Web y Branding Profesional | Nítida Creatividad Digital";
const pageDescription = "Especialistas en diseño web, branding y desarrollo visual. Creamos marcas memorables y sitios funcionales para negocios que quieren destacar.";
const pageUrl = "https://nitidadigital.com"; // cambia esto a tu dominio real
const imageUrl = "https://nitidadigital.com/assets/images/og_image.png"; // cambia por una imagen destacada

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={pageDescription} />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="robots" content="index, follow" />
		<meta name="author" content="Nítida Creatividad Digital" />
		<meta name="keywords" content="diseño web, branding, desarrollo web, identidad visual, diseño gráfico, sitios web, marca, logotipo, identidad de marca, diseño UX UI" />
		
		<!-- Open Graph -->
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={pageUrl} />
		<meta property="og:image" content={imageUrl} />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={pageDescription} />
		<meta name="twitter:image" content={imageUrl} />
		
		<link rel="canonical" href={pageUrl} />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>

		<!-- Favicon básico -->
		<link rel="icon" href="../favicon/favicon.ico" type="image/x-icon">
		<link rel="icon" type="image/svg+xml" href="../favicon/favicon.svg" sizes="any">

		<!-- Apple Touch Icon -->
		<link rel="apple-touch-icon" sizes="180x180" href="../favicon/apple-touch-icon.png">

		<!-- Iconos PNG recomendados -->
		<link rel="icon" type="image/png" sizes="96x96" href="../favicon/favicon-96x96.png">
		<link rel="icon" type="image/png" sizes="192x192" href="../favicon/web-app-manifest-192x192.png">
		<link rel="icon" type="image/png" sizes="512x512" href="../favicon/web-app-manifest-512x512.png">

		<!-- Web Manifest -->
		<link rel="manifest" href="../favicon/site.webmanifest">

		<!-- Theme color para navegadores móviles -->
		<meta name="theme-color" content="#ffffff">
	</head>
	<body>
		<slot />
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
